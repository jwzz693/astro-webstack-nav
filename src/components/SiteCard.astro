---
interface Props {
  name: string;
  url: string;
  desc?: string;
  icon?: string;
}

const { name, url, desc, icon } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="group relative flex h-full flex-col gap-2 overflow-hidden rounded-xl border border-slate-200 bg-white p-4 hover:border-blue-500 hover:shadow-lg dark:border-slate-700 dark:bg-sidebar-dark dark:hover:border-blue-500 transition-all duration-300">
  <div class="flex items-center gap-3">
    <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-slate-100 dark:bg-slate-800">
      {icon ? (
        <img src={icon} alt={name} class="h-6 w-6" loading="lazy" />
      ) : (
        <span class="text-xl">üåç</span>
      )}
    </div>
    <h3 class="font-medium text-slate-900 dark:text-slate-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 line-clamp-1">
      {name}
    </h3>
  </div>
  {desc && (
    <p class="text-sm text-slate-500 dark:text-slate-400 line-clamp-2" title={desc}>
      {desc}
    </p>
  )}
</a>
