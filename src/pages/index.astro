---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
import SiteCard from '../components/SiteCard.astro';
import { getCollection } from 'astro:content';

const groups = await getCollection('groups');
const sortedGroups = groups.sort((a, b) => a.id.localeCompare(b.id));
---

<Layout title="WebStack - ÈùôÊÄÅÂØºËà™">
  <Sidebar />

  <div class="p-4 md:ml-64 transition-all duration-300">
    <!-- Mobile Header -->
    <header class="mb-6 flex items-center justify-between rounded-xl bg-white p-4 shadow-sm md:hidden dark:bg-sidebar-dark">
      <div class="flex items-center gap-3">
        <button data-toggle-sidebar class="rounded-lg p-2 hover:bg-slate-100 dark:hover:bg-slate-700">
          <svg class="h-6 w-6 text-slate-600 dark:text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
        <h1 class="text-lg font-bold text-slate-800 dark:text-white">WebStack</h1>
      </div>
    </header>

    <!-- Search Section (Placeholder) -->
    <div class="mb-8 rounded-xl bg-white p-6 shadow-sm dark:bg-sidebar-dark">
        <div class="mx-auto max-w-2xl">
            <div class="relative">
                <input type="text" placeholder="ÊêúÁ¥¢..." class="w-full rounded-full border border-slate-200 bg-slate-50 py-3 px-6 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500 dark:border-slate-700 dark:bg-slate-800 dark:text-white" />
                <button class="absolute right-2 top-1/2 -translate-y-1/2 rounded-full bg-blue-600 p-2 text-white hover:bg-blue-700">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="space-y-10 pb-20">
      {sortedGroups.map((group) => (
        <section id={group.id} class="scroll-mt-20">
          <div class="mb-4 flex items-center gap-2">
            <span class="text-2xl">üè∑Ô∏è</span>
            <h2 class="text-xl font-bold text-slate-800 dark:text-white">{group.data.name}</h2>
          </div>
          
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5">
            {group.data.items.map((item) => (
              <SiteCard 
                name={item.name} 
                url={item.url} 
                desc={item.desc} 
                icon={item.icon} 
              />
            ))}
          </div>
        </section>
      ))}
    </main>

    <footer class="mt-20 border-t border-slate-200 py-6 text-center text-sm text-slate-500 dark:border-slate-800 dark:text-slate-400">
      <p>&copy; {new Date().getFullYear()} WebStack Astro. Built with Astro & Tailwind.</p>
    </footer>
  </div>
</Layout>
